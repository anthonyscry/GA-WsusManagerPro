<Window x:Class="WsusManager.App.Views.GpoInstructionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:automation="clr-namespace:System.Windows.Automation;assembly=PresentationCore"
        Title="GPO Deployment - Instructions"
        Width="480" Height="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource PrimaryBackground}"
        automation:AutomationProperties.AutomationId="GpoInstructionsDialog">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="GPO Files Deployed" FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource StatusSuccess}"/>
            <TextBlock Text="Follow the steps below to apply the GPO on your Domain Controller."
                       Foreground="{DynamicResource TextSecondary}" FontSize="12" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Instructions (selectable/copyable) -->
        <TextBox x:Name="TxtInstructions" Grid.Row="1"
                 automation:AutomationProperties.AutomationId="GpoInstructionsTextBox"
                 IsReadOnly="True" TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextPrimary}"
                 BorderBrush="{DynamicResource BorderPrimary}" Padding="8" FontSize="12"
                 FontFamily="Consolas"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Copy to Clipboard" Style="{StaticResource BtnSec}"
                    automation:AutomationProperties.AutomationId="CopyGpoFilesButton"
                    Padding="16,8" Margin="0,0,8,0"
                    Click="CopyToClipboard_Click"/>
            <Button Content="Close" Style="{StaticResource BtnGreen}"
                    automation:AutomationProperties.AutomationId="CloseGpoInstructionsButton"
                    Padding="20,8"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
