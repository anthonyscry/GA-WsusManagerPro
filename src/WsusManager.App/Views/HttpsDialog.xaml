<Window x:Class="WsusManager.App.Views.HttpsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:automation="clr-namespace:System.Windows.Automation;assembly=PresentationCore"
        Title="Set HTTPS"
        Width="500" Height="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource PrimaryBackground}"
        automation:AutomationProperties.AutomationId="HttpsDialog">

    <Grid Margin="24" KeyboardNavigation.TabNavigation="Continue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Configure WSUS HTTPS" FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimary}"/>
            <TextBlock Text="Enter the WSUS server and certificate thumbprint to configure HTTPS bindings on port 8531."
                       Foreground="{DynamicResource TextSecondary}" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="WSUS Server Name" Foreground="{DynamicResource TextSecondary}"
                       FontSize="12" Margin="0,0,0,4"/>
            <TextBox x:Name="TxtServerName"
                     automation:AutomationProperties.AutomationId="HttpsServerNameTextBox"
                     Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextPrimary}"
                     BorderBrush="{DynamicResource BorderPrimary}" Padding="6,4" FontSize="12"
                     Margin="0,0,0,12"
                     TextChanged="Input_Changed"/>

            <TextBlock Text="Certificate Thumbprint" Foreground="{DynamicResource TextSecondary}"
                       FontSize="12" Margin="0,0,0,4"/>
            <TextBox x:Name="TxtThumbprint"
                     automation:AutomationProperties.AutomationId="HttpsThumbprintTextBox"
                     Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextPrimary}"
                     BorderBrush="{DynamicResource BorderPrimary}" Padding="6,4" FontSize="12"
                     TextChanged="Input_Changed"/>
        </StackPanel>

        <TextBlock x:Name="TxtValidation" Grid.Row="2"
                   Foreground="{DynamicResource StatusError}" FontSize="11" TextWrapping="Wrap" Margin="0,8,0,0"
                   Text="Server name and thumbprint are required."/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel" Style="{StaticResource BtnSec}"
                    automation:AutomationProperties.AutomationId="CancelHttpsButton"
                    Padding="20,8" Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button x:Name="BtnApply" Content="Apply HTTPS" Style="{StaticResource BtnGreen}"
                    automation:AutomationProperties.AutomationId="ApplyHttpsButton"
                    Padding="20,8" IsEnabled="False"
                    Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>
