<Window x:Class="WsusManager.App.Views.InstallDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Install WSUS with SQL Server Express"
        Width="480" Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource PrimaryBackground}">

    <Grid Margin="24" KeyboardNavigation.TabNavigation="Continue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Install WSUS" FontSize="16" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimary}"/>
            <TextBlock Text="Installs SQL Server Express 2022 and the WSUS role. Place SQLEXPRADV_x64_ENU.exe in the installer directory."
                       Foreground="{DynamicResource TextSecondary}" FontSize="12" TextWrapping="Wrap" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Fields -->
        <StackPanel Grid.Row="1">

            <!-- Installer Path -->
            <TextBlock Text="Installer Path" Foreground="{DynamicResource TextSecondary}"
                       FontSize="12" Margin="0,0,0,4"/>
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="TxtInstallerPath" Grid.Column="0" Text="C:\WSUS\SQLDB"
                         Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextPrimary}"
                         BorderBrush="{DynamicResource BorderPrimary}" Padding="6,4" FontSize="12"
                         TextChanged="Input_Changed"/>
                <Button Grid.Column="1" Content="Browse" Style="{StaticResource BtnSec}"
                        Padding="10,4" Margin="6,0,0,0" FontSize="11"
                        Click="BrowseInstallerPath_Click"/>
            </Grid>

            <!-- SA Username -->
            <TextBlock Text="SA Username" Foreground="{DynamicResource TextSecondary}"
                       FontSize="12" Margin="0,0,0,4"/>
            <TextBox x:Name="TxtSaUsername" Text="sa"
                     Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextPrimary}"
                     BorderBrush="{DynamicResource BorderPrimary}" Padding="6,4" FontSize="12"
                     Margin="0,0,0,12"/>

            <!-- SA Password -->
            <TextBlock Text="SA Password (15+ chars, 1 digit, 1 special char)" Foreground="{DynamicResource TextSecondary}"
                       FontSize="12" Margin="0,0,0,4"/>
            <PasswordBox x:Name="PwdSaPassword"
                         Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextPrimary}"
                         BorderBrush="{DynamicResource BorderPrimary}" Padding="6,4" FontSize="12"
                         PasswordChanged="Input_Changed"/>
        </StackPanel>

        <!-- Validation Text -->
        <TextBlock x:Name="TxtValidation" Grid.Row="2"
                   Foreground="{DynamicResource StatusError}" FontSize="11" TextWrapping="Wrap" Margin="0,8,0,0"
                   Text="Enter installer path and SA password to continue."/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Cancel" Style="{StaticResource BtnSec}"
                    Padding="20,8" Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button x:Name="BtnInstall" Content="Install" Style="{StaticResource BtnGreen}"
                    Padding="20,8" IsEnabled="False"
                    Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>
